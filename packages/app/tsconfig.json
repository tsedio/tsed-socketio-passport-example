{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "pages",
    "renderer",
    "components",
    "react-app-env.d.ts",
    ".dev.test.ts",
    ".prod.test.ts",
    "vite.config.ts",
    "postcss.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": []
}
